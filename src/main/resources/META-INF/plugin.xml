<idea-plugin>
    <id>com.quetzalfir.contentcollector</id>
    <name>Content Collector</name>
    <vendor email="quetzalfir2@gmail.com">Fernando Valencia</vendor>
    <depends>com.intellij.modules.platform</depends>

    <description><![CDATA[
        Adds the actions <b>Get Content</b> and <b>Get Content&nbsp;(Advanced)</b>
        that copy the full text of the selected files / folders to the clipboard.
    ]]></description>

    <!-- Modern declaration of the Notification Group -->
    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup
                id="contentcollector"
                displayType="BALLOON"
                isLogByDefault="false"/>
    </extensions>

    <actions>
        <!-- Quick one-off dump -->
        <action id="contentcollector.GetContent"
                class="com.quetzalfir.contentcollector.GetContentAction"
                text="Get Content"
                description="Dump selected files">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <add-to-group group-id="EditorTabPopupMenu" anchor="last"/>
        </action>

        <!-- Preset-driven dump -->
        <group id="contentcollector.GetContentAdvanced"
               class="com.quetzalfir.contentcollector.GetContentAdvancedAction"
               text="Get Content (Advanced)"
               description="Dump selected files with filters"
               popup="true">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <add-to-group group-id="EditorTabPopupMenu"   anchor="last"/>
        </group>

        <!-- Visual separator after the pluginâ€™s items -->
        <action id="contentcollector.EndSeparator"
                class="com.intellij.openapi.actionSystem.Separator">
            <add-to-group group-id="ProjectViewPopupMenu"
                          anchor="after"
                          relative-to-action="contentcollector.GetContentAdvanced"/>
            <add-to-group group-id="EditorTabPopupMenu"
                          anchor="after"
                          relative-to-action="contentcollector.GetContentAdvanced"/>
        </action>
    </actions>

</idea-plugin>
